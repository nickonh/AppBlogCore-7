@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<br />
<br />
<h3 class="text-center">Editar categoria</h3>
<form method="POST" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-6">
                    <label class="col-6">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-10">
                    <input asp-for="Nombre" class="forma-control" placeholder="Ingrese el nombre de la categoria" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <label class="col-6">
                        <label asp-for="Orden"></label>
                    </label>
                </div>
                <div class="col-10">
                    <input asp-for="Orden" class="forma-control" placeholder="Ingrese el orden de la visualizacion" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.IdCategoria">Actualizar</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Volver a la Vista</a>
                </div>
            </div>
        </div>
    </div>
</form>